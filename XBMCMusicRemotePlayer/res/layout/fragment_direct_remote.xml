<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/BoutonDisplay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1px"
        android:background="@color/Black"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/ButtonDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@drawable/button_bg"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_button_display" >
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FlechesPlusBoutons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/FlechesV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/gradient"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/FlechesH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnRemoteUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_button_up" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FlechesH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnRemoteLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_button_left" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/btnRemoteOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_button_ok" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/btnRemoteRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_button_right" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FlechesH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnRemoteDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_button_down" >
                </ImageButton>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menutitleinfoback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btnRemoteMenu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:background="@color/Black"
                
                android:src="@drawable/img_button_menu" >
            </ImageButton>

            <ImageButton
                android:id="@+id/btnRemoteHome"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:background="@color/Black"
                
                android:src="@drawable/img_button_home" >
            </ImageButton>

            <ImageButton
                android:id="@+id/btnRemoteBack"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1px"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:background="@color/Black"
                
                android:src="@drawable/img_button_back" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MusicnCo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/Black"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnRemoteMovetoAllSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/button_bg"
        	android:layout_alignParentLeft="true"
            android:src="@drawable/img_button_music" >
        </ImageButton>
    </LinearLayout>

</LinearLayout>